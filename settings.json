{
    // Security
    "security.workspace.trust.enabled": true,

    // Extensions
    "extensions.ignoreRecommendations": true,

    // Explorer
    "explorer.confirmDragAndDrop": false,
    "explorer.compactFolders": false,
    "explorer.confirmDelete": false,

    // Breadcrumbs
    "breadcrumbs.enabled": false,

    // Window
    "window.menuBarVisibility": "hidden",

    // File Associations
    "files.associations": {
        "*.css": "tailwindcss",
        "*.postcss": "postcss",
        "*.env": "dotenv"
    },

    // Workbench
    "workbench.editor.enablePreview": false,
    "workbench.editor.empty.hint": "hidden",
    "workbench.colorTheme": "Default Dark+",
    "workbench.iconTheme": "vscode-icons",
    "workbench.settings.editor": "json",
    "workbench.startupEditor": "none",

    // Language specific settings
    "[svelte]": { "editor.defaultFormatter": "svelte.svelte-vscode" },
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "svelte.enable-ts-plugin": true,

    // Terminal
    "terminal.integrated.env.windows": {},
    "terminal.integrated.fontSize": 16,

    // Editor
    "editor.codeActionsOnSave": { "source.fixAll.eslint": "always" },
    "editor.tokenColorCustomizations": { "textMateRules": [] },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.quickSuggestions": { "strings": true },
    "editor.inlineSuggest.enabled": true,
    "editor.stickyScroll.enabled": false,
    "editor.minimap.enabled": false,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.cursorBlinking": "expand",
    "editor.cursorWidth": 3,
    "editor.wordWrap": "on",
    "editor.fontSize": 16,

    // VSCode Icons
    "vsicons.presets.foldersAllDefaultIcon": true,
    "vsicons.dontShowNewVersionMessage": true,

    // Thunder Client
    "thunder-client.sidebar.defaultTab": "Collections",
    "thunder-client.defaultURL": "http://localhost:5173",
    "thunder-client.indentSize": 4,

    // Tailwind
    "tailwindCSS.includeLanguages": {
        "html": "html",
        "css": "css",
        "javascript": "javascript"
    },
    "tailwindCSS.experimental.classRegex": ["(?:const|let|var)\\s+[\\w$_][_\\w\\d]*\\s*=\\s*['\\\"](.*?)['\\\"]"],

    // Markdown Preview Enhanced
    "markdown-preview-enhanced.codeBlockTheme": "one-dark.css",
    "markdown-preview-enhanced.previewTheme": "one-dark.css",
    "markdown-preview-enhanced.scrollSync": false,

    // Prettier
    "prettier.trailingComma": "none",
    "prettier.jsxSingleQuote": true,
    "prettier.singleQuote": true,
    "prettier.semi": false,
    "prettier.printWidth": 200,
    "prettier.tabWidth": 4,

    // ESlint
    "eslint.rules.customizations": [{ "rule": "*", "severity": "warn" }],

    // Error Lens
    "errorLens.messageBackgroundMode": "none",

    // Github Copilot
    "github.copilot.enable": { "*": true }
}
